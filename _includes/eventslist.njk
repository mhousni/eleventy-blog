{%- css %}.eventlist { counter-reset: start-from {{ (eventslistCounter or eventslist.length) + 1 }} }{% endcss %}
<ol reversed class="eventlist d-flex">
{% for event in eventslist | reverse %}
	<li class="eventlist-item{% if event.url == url %} eventlist-item-active{% endif %}">
		<a href="{{ event.url }}" class="eventlist-link">
			{# {% if post.data.title %}
			{{ post.data.title }}{% else %}<code>{{ post.url }}</code>
			{% endif %} #}
			{% if event.data.cover %}
			<img width="200px" class="img-fluid" src="../{{ event.data.cover }}" alt="{{ event.data.title }}">
			{% endif %}
		</a>
		
		{# <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time> #}
	</li>
{% endfor %}
</ol>
